{
  "compileOnSave": false,
  "compilerOptions": {
    // "strictPropertyInitialization": true, // FORZA LA INICIALIZACION EN CONSTRUCTOR
    "baseUrl": "src",
    "paths": {
      "@services/*" : ["app/services/*"],
      "@components/*" : ["app/components/*"],
      "@models/*": ["app/models/*"],
      "@modals/*": ["app/modals/*"],
      "@templates/*": ["app/templates/*"],
      "@shared/*": ["app/shared/*"],
      "@pipes/*": ["app/pipes/*"],
      "@interfaces/*": ["app/interfaces/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
